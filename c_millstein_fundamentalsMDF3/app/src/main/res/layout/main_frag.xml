<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--PLAY BUTTON-->
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/playButton"
        android:background="@drawable/play"
        android:layout_marginBottom="60dp"
        android:onClick="startService"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/songName"
        android:layout_marginEnd="37dp" />


    <!--PAUSE BUTTON-->
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/pauseButton"
        android:background="@drawable/pause"
        android:onClick="pauseService"
        android:layout_alignTop="@+id/playButton"
        android:layout_centerHorizontal="true" />


    <!--FAST FORWARD BUTTON-->
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/skip_forward"
        android:background="@drawable/skip_right"
        android:layout_alignTop="@+id/pauseButton"
        android:layout_toStartOf="@+id/stop"
        android:layout_marginEnd="38dp" />

    <!--REWIND BUTTON-->
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/skip_backward"
        android:background="@drawable/skip_left"
        android:layout_alignTop="@+id/playButton"
        android:layout_alignStart="@+id/albumName" />


    <!--STOP BUTTON-->
    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/stop"
        android:background="@drawable/stop"
        android:onClick="stopService"
        android:layout_alignTop="@+id/skip_forward"
        android:layout_alignEnd="@+id/albumName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Under Pressure (Deluxe Version)"
        android:id="@+id/albumName"
        android:layout_above="@+id/playButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="62dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Song"
        android:id="@+id/songName"
        android:layout_alignTop="@+id/albumName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:background="@drawable/logic"
        android:layout_above="@+id/songName"
        android:layout_centerHorizontal="true" />


</RelativeLayout>